
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Slide -->
<div class="container-slide">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/imgs/slide/slide_1.jpg" alt="hình silde">
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <img src="~/imgs/slide/slide_2.jpg" alt="hình silde">
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <img src="~/imgs/slide/slide_3.jpg" alt="hình silde">
                <div class="carousel-caption">
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<!-- End Slide -->
<!-- Body -->
<div class="container">
    <!-- Featured products -->
    <div class="row mg-top-20">
        <div class="pull-left featured-products">
            <span>Sản phẩm nổi bật</span>
        </div>
    </div>
    <div class="mg-top-20">
        <div class="owl-carousel owl-theme" id="slide-pro">
            @foreach (var sach in Model)
            {
            <div class="item">
                <div class="col-md-12">
                    <div class="box-product">
                        <div class="thumb-product event-product">
                            <img src="~/imgs/products/@sach.Anhbia" alt="">
                            <div class="sale-product">-@sach.Giamgia%</div>
                            <div class="view-product">
                                <a href="@Url.Action("Themgiohang", "Cart", new { @iMasach=@sach.Masach, @strURL=Request.Url.ToString()})"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                                <a href="@Url.Action("Details", "Product", new { id=sach.Masach})"><i class="fa fa-eye" aria-hidden="true"></i></a>
                            </div>
                        </div>
                        <a href="">
                            <div class="info-product">
                                <h4>@sach.Tensach</h4>
                            </div>
                        </a>

                    </div>
                </div>
            </div>
            }
            
        </div>
    </div>
    <!-- End Featured products -->
    <!-- New products -->
    <div class="row">
        <div class="col new-products">
            <span>Sản phẩm mới nhất</span>
        </div>
    </div>
    <div class="row mg-top-20">
        @foreach (var sach in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-4 col-s-6 col-xs-12 mg-top-20">
                <div class="box-product event-product">
                    <div class="thumb-product">
                        <img src="~/imgs/products/@sach.Anhbia" alt="@sach.Tensach">
                        <div class="sale-product">-@sach.Giamgia%</div>
                    </div>
                    <a href="#">
                        <div class="info-product">
                            <h4>@sach.Tensach</h4>
                            <div class="new-price">
                                <span>@String.Format("{0:N0}", @sach.Giaht) VNĐ</span>
                            </div>
                            <div class="old-price">
                                <del>@String.Format("{0:N0}", @sach.Giaban) VNĐ</del>
                            </div>
                        </div>
                    </a>
                    <div class="view-product">
                        <a href="@Url.Action("Themgiohang", "Cart", new { @iMasach=@sach.Masach, @strURL=Request.Url.ToString()})"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                        <a href="@Url.Action("Details", "Product", new { id=sach.Masach})"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    </div>

                </div>
            </div>
        }
        
    </div>
    

    <!-- End New products -->
</div>
<!-- End Body -->